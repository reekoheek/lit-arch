{
  "name": "node-ts-arch",
  "version": "1.0.0",
  "description": "Node.js Typescript Archetype",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist ./coverage ./nyc_output",
    "dev": "vite",
    "lint": "wireit",
    "lint:eslint": "eslint ./src",
    "lint:ts": "tsc --noEmit",
    "build": "wireit",
    "build:vite": "vite build",
    "test": "wireit",
    "test:watch": "wtr --watch"
  },
  "wireit": {
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:ts"
      ],
      "files": [
        "./eslintrc.js",
        "./eslintignore",
        "./src/**/*.ts",
        "./tsconfig.json"
      ]
    },
    "build": {
      "dependencies": [
        "lint",
        "test",
        "build:vite"
      ],
      "files": [
        "./src/**/*.ts",
        "./tsconfig.json"
      ]
    },
    "test": {
      "command": "wtr",
      "files": [
        "./src/**/*.ts",
        "./tsconfig.json",
        "./web-test-runner.config.js"
      ],
      "output": [
        "./.nyc_output/**",
        "./coverage/**"
      ]
    }
  },
  "author": "Ganesha <reekoheek@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@open-wc/testing": "^3.1.8",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/test-runner": "^0.16.1",
    "cssnano": "^6.0.1",
    "eslint-config-xinix": "^2.0.1",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^8.3.2",
    "postcss-url": "^10.1.3",
    "typescript": "^5.0.4",
    "vite": "^4.3.6",
    "wireit": "^0.9.5"
  },
  "dependencies": {
    "@xlit/di": "^2.0.3",
    "@xlit/form": "^2.0.3",
    "@xlit/router": "^2.0.3",
    "bootstrap": "^5.2.3",
    "lit": "^2.7.4"
  }
}
